generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TopBarSettings {
  id           Int      @id @default(autoincrement())
  email        String
  emailLabel   String   @default("E-PASTS:")
  location     String
  locationLabel String  @default("NĀKAMĀ PIETURA:")
  facebook     String?
  instagram    String?
  youtube      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("topbar_settings")
}

model NavbarSettings {
  id          Int      @id @default(autoincrement())
  logoText    String   @default("SDK")
  logoSubtext String   @default("THUNDER")
  logoImage   String?  // URL uz logo attēlu
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("navbar_settings")
}

model NavbarMenuItem {
  id        Int     @id @default(autoincrement())
  name      String
  href      String
  order     Int     @default(0)
  active    Boolean @default(false)
  visible   Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("navbar_menu_items")
}

model HeroSettings {
  id                Int      @id @default(autoincrement())
  title             String   @default("SDKThunder")
  subtitle          String   @default("SPORTA DRAUGU KLUBS")
  locationText      String   @default("Nākamā pietura - Xiaomi Arēna, Rīga, Latvija.")
  tagline1          String   @default("Mēs Ticam !")
  tagline2          String   @default("Jūs Varat !")
  buttonText        String   @default("KALENDĀRS")
  buttonLink        String   @default("/calendar")
  countdownTitle    String   @default("FIBA EuroBasket")
  countdownSubtitle String   @default("2025")
  countdownDate     DateTime @default(now())
  countdownStartDate DateTime @default(now())
  countdownDateLabel String  @default("Datumi:")
  backgroundOverlay String?  @default("#7c2d12")
  backgroundImage   String?  
  logoImage         String?  
  usePatternBg      Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("hero_settings")
}

model EventsSettings {
  id                    Int      @id @default(autoincrement())
  title                 String   @default("Tuvākie sporta")
  subtitle              String   @default("pasākumi")
  eventTitle            String   @default("FIBA EuroBasket 2025")
  eventSubtitle         String?  @default("")
  eventDescription      String?  @default("")
  eventLocation         String?  @default("Rīga, Latvija")
  eventDates            String?  @default("27/08 - 14/09")
  eventStartDate        DateTime? // Sākuma datums
  eventEndDate          DateTime? // Beigu datums
  eventYear             String?  @default("2025")
  eventType             String?  @default("Čempionāts")
  eventTeams            String?  @default("24 komandas")
  buttonText            String   @default("PILNS KALENDĀRS")
  buttonLink            String   @default("/calendar")
  logoImage             String?
  backgroundGradient    String   @default("from-red-600 to-red-700")
  customColorFrom       String?  // Custom hex krāsa sākumam
  customColorTo         String?  // Custom hex krāsa beigām
  showAdditionalText    Boolean  @default(true)
  additionalText        String?  @default("Vairāk sporta pasākumu un spēļu skatīties kalendārā")
  additionalButtonText  String?  @default("Skatīt visus pasākumus")
  additionalButtonLink  String?  @default("/calendar")
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@map("events_settings")
}

model Partner {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  logo        String?     
  tier        PartnerTier @default(BRONZE)
  website     String?
  active      Boolean     @default(true)
  order       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("partners")
}

enum PartnerTier {
  GOLD
  SILVER  
  BRONZE
  PARTNER  
}

model News {
  id          Int       @id @default(autoincrement())
  title       String
  slug        String    @unique
  summary     String
  content     String
  image       String?   // nullable, ja nav bildes
  category    String
  tags        String[]  // Postgres array
  author      String
  published   Boolean   @default(false)
  featured    Boolean   @default(false)
  trending    Boolean   @default(false)
  readTime    Int
  views       Int       @default(0)
  comments    Int       @default(0)
  likes       Int       @default(0)
  publishedAt DateTime? // nullable, ja raksts nav publicēts
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model CalendarEvent {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  date        DateTime
  endDate     DateTime?
  location    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("calendar_events")
}

model GalleryItem {
  id Int @id @default(autoincrement())
  title String
  type MediaType @default(PHOTO)
  url String // Šis būs galvenais media URL (foto vai video)
  thumbnail String?
  mainImage String? // Galvenais attēls (parādīsies kā cover)
  additionalImages String[] // Papildus attēli
  additionalUrls String[]
  category String @default("all")
  tags String[]
  description String?
  author String @default("SDKThunder")
  featured Boolean @default(false)
  order Int @default(0)
  views Int @default(0)
  likes Int @default(0)
  duration String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("gallery_items")
}

enum MediaType {
  PHOTO
  VIDEO
}

model AboutContent {
  id Int @id @default(autoincrement())
  title String
  subtitle String?
  mainStory String @db.Text
  slogan1 String?
  slogan2 String?
  slogan3 String?
  foundedYear String @default("2018")
  logoUrl String?
  backgroundImageUrl String?
  ctaText String?
  ctaSubtext String @db.Text
  contactButtonText String @default("Sazināties ar mums")
  learnMoreButtonText String @default("Uzzināt vairāk")
  isActive Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("about_content")
}

model AboutValue {
  id Int @id @default(autoincrement())
  text String
  order Int @default(0)
  isActive Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("about_values")
}

model AboutStat {
  id Int @id @default(autoincrement())
  icon String // Icon name
  number String
  label String @db.Text
  color String @default("from-blue-500 to-blue-600")
  order Int @default(0)
  isActive Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("about_stats")
}

model PartnersSettings {
  id          Int      @id @default(autoincrement())
  title       String   @default("Mūsu Partneri")
  subtitle    String   @default("Mūsu foršie draugi, atbalstītāji un sadarbības partneri")
  titleAccentColor String @default("#dc2626")
  ctaTitle    String   @default("Vēlies kļūt par mūsu partneri?")
  ctaSubtitle String   @default("Sazinies ar mums un kopā veidosim nākotni!")
  ctaButtonText String @default("Sazināties ar mums")
  ctaButtonLink String @default("/contact")
  ctaBgColor  String   @default("#dc2626")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("partners_settings")
}
